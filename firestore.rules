
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- GLOBAL HELPER FUNCTIONS ---

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isCreator(creatorId) {
      return isSignedIn() && request.auth.uid == creatorId;
    }

    // --- COLLECTION RULES ---

    match /users/{userId} {
      // Allow any authenticated analyst to view the network directory
      allow get, list: if isSignedIn();
      
      allow create: if isOwner(userId) 
        && request.resource.data != null 
        && request.resource.data.id == userId;
      
      allow update: if isOwner(userId) 
        && request.resource.data.id == resource.data.id;
      
      allow delete: if isOwner(userId);
    }

    match /problems/{problemId} {
      allow get, list: if isSignedIn();
      allow create: if request.resource.data != null && isCreator(request.resource.data.createdBy);
      allow update, delete: if isCreator(resource.data.createdBy);
    }
  }
}
